        p.info Phone:+381631890130
        p.info.mb-2 +381(0)20600363
        p.info E-mail:office@udruzenjepsihologanp.org
        p.info udruzenje.psihologa.np@gmail.com
      .col-md-6.col-12.overflow-h.map.px-0
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2911.4044453514034!2d20.50757465146469!3d43.13803567904003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x475628168ea4cb55%3A0x1d62fe2b15af789f!2sMitrova%C4%8Dka%2C+Novi+Pazar%2C+Serbia!5e0!3m2!1sen!2smk!4v1521295900476' width='600' height='450' frameborder='0' style='border:0' allowfullscreen='')
