          h1.p-0.spec Kako da dodjete do nas?
          p
            strong Office
          p Mitrovacka BB
          p Novi Pazar 36300
          p
            strong Telefon:
          p +381631890130
          p +381695727072
          p +381(0)20600363
          p
            strong Email
          p office@udruzenjepsihologanp.org
    form(action='/send-mail' id='contact-form' method='POST')
      .row.contact-form
        .col-12
          h1.text-right.my-4 Pošaljite nam poruku
        .col-md-6.col-12
          label(for='name') Ime*
          .input-group
            input#name.form-control(type='text' name='name')
          label(for='email') Email*
          .input-group
            input#email.form-control(type='email' name='email')
          label(for='phone') Broj Telefona
          .input-group
            input#phone.form-control(type='text' name='phone')
          label(for='company') Ime Kompanije
          .input-group
            input#company.form-control(type='text' name='company')
        .col-md-6.col-12
          label(for='title') Naslov*
          .input-group
            input#title.form-control(type='text' name='title')
          label(for='message') Poruka*
          .input-group
            textarea.form-control(aria-label='With textarea' rows='7' name='message' id='message')
        .col-12.buton-container
          button.btn.btn-default.btn-custom Posalji
    #myModal.modal.fade
      .modal-dialog
        .modal-content
          // Modal Header
          #customHeaderModal.modal-header
            h4.modal-title.m-auto Obavestenje
